# Checkpoint API Configuration
# Скопируйте этот файл в .env и настройте параметры

# KeyDB Configuration
KEYDB_PASSWORD=your_strong_password_here
# Оставьте пустым для отсутствия пароля: KEYDB_PASSWORD=

# API Authentication
AUTH_USERNAME=admin
AUTH_PASSWORD=checkpoint2025

# Rate Limiting (запросов в минуту на инстанс)
RATE_LIMIT=1000

# API Instance Configuration
# Каждый API инстанс будет иметь свой ID
INSTANCE_ID=api1
# INSTANCE_ID=api2
# INSTANCE_ID=api3

# Logging Level
LOG_LEVEL=info

# Database Configuration
DB_HOST=keydb
DB_PORT=6379

# Security
# Генерируйте новые пароли для продакшена!
# Используйте: openssl rand -base64 32

# Monitoring
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true

# Performance
MAX_CONNECTIONS=1000
TIMEOUT_SECONDS=30


